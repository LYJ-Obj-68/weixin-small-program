/**user.wxss**/
.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #F2f2f2;
}

.userinfo view {
  margin-right: 30rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.list {
  margin-top: 50rpx;
}

.list view {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
  padding-left: 30rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #dadada;
}

.list image {
  width: 60rpx;
  height: 60rpx;
}

.list text {
  margin-left: 40rpx;
}

.cart_container {
  display: flex;
  flex-direction: row;
}
.scroll {
  margin-bottom: 120rpx;
}
.column {
  display: flex;
  flex-direction: column;
}
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
/*商品标题及删除按钮样式*/
.dele-icon {
  position: relative;
  margin-top: 40rpx;
  margin-left: 130rpx;
}
.title {
  position: relative;
  font-size: 38rpx;
  margin-top: 40rpx;
}
/*单选按钮及图片样式*/
.item-select {
  margin-top: 90rpx;
  margin-left: 20rpx;
}
.item-image {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
}
/*价格及数量按钮样式*/
.sku-price {
  color: red;
}
.minus-button{
  margin-top: 60rpx;
  margin-left: 90rpx;
  color: black;
  font-size: 30px;
  border-radius: 0rpx;
  border-color: #939393;
  width: 36%;
  height: 26px;
  background-color:white;
  text-align: center;
}
.count-button{
  margin-top: 60rpx;
  color: black;
  font-size: 15px;
  border-radius: 0rpx;
  border-color: #939393;
  width: 30%;
  height: 26px;
  background-color:white;
  text-align: center;
}
.add-button{
  margin-top: 60rpx;
  color: black;
  font-size: 30px;
  border-radius: 0rpx;
  border-color: #939393;
  width: 36%;
  height: 26px;
  background-color:white;
  text-align: center;
}
/*底部样式*/
.bottom_line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
}
.bottom_total {
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  background: white;
}
.small_text {
  font-size: 28rpx;
  margin-right: 40rpx;
  margin-left: 10rpx;
}
.all-select {
  margin-left: 20rpx;
  margin-top: 25px;
}
.price {
  color: red;
  position: relative;
}
.pay-button {
  position: fixed;
  right: 0;
  color: white;
  text-align: center;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 30%;
  height: 120rpx;
  line-height: 120rpx;
  background-color: #f44336; /* 红色 */
}
.empty_tip{
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  background-color: #F2f2f2;
  color: #939393;
}